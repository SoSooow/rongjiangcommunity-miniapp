/* 全局设置 */
page{
 
  background-color: #F8F8F8;
  
  height: 100vh;
}
/* 最大框架布局设置 */
.frame_page{
  background-color: #ffffff;
  margin-top: 20rpx;
  overflow: hidden;
  
}

.school{
  font-family: PingFang-SC-Medium;
  color: #333333;
  font-size: 32rpx;
}
/* 专业 */
.bachelor{
  margin-top: 6rpx;
  margin-left: 18rpx;
  display: inline-block;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  color: #666666;
}
/* 高中、本科等学历 */
.bachelorTiltle{
  padding-left: 10rpx;
  padding-right: 10rpx;

  display: flex;
  align-items: center;
  justify-content: center;

  /* 相对于框架frame_school */
  align-self: center; 

  background-color: rgba(0, 141, 248, 0.2);
  margin-left: 11rpx;
  font-size: 18rpx;
  color: #008DF8;
}
/*在校时间 */
.timeRange{
  display: block;
  margin-top: 17rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #999999;
}
/* 编辑图标 */
.editIcon{
  margin-top: 30rpx;
  margin-right: 0rpx;
  right: 30rpx;
  top: 10rpx;
  width: 44rpx;
  height: 44rpx;
  padding: 20rpx;
}
.tips{
  margin-left: 14rpx;
  font-family: PingFang-SC-Regular;
  font-size: 24rpx;
  color: #999999;
}
.tips_icon{
  height: 26rpx;
  width: 26rpx;
}
/* 提交按钮 */
.submit{
  left: 50%;
  width: 300rpx;
  transform: translateX(-50%);
  background: #4e85c6;
  color: #fff;
}
.frame_tips{
  margin-top: 26rpx;
  display: flex;
  justify-content: flex-start;
}
.frame_information{
  margin-top: 23rpx;
  margin-bottom: 23rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}
.frame_icon{  
  margin-right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.frame{
  display: flex;
  justify-content: space-between;
}
.frame_SchoolName{
  display: flex;
}
.button{
  width: 690rpx;
  height: 100rpx;
  background-color: #008DF8;
  border-radius: 10rpx;
  text-align: center;
  color: #ffffff;
}
.buttonB{
  margin-top: 160rpx;
  width: 690rpx;
  height: 100rpx;
  background-color: #008DF8;
  border-radius: 10rpx;
  text-align: center;
  color: #ffffff;
}

/* 左滑删除*/
.order-item {
  /* height: 120rpx; */
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.remove{  
  width: 160rpx;  
  height: 100%;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -160rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}
